/* 背景容器 */
.container {
  padding: 32rpx;
  /* background-color: #FFF8F3; */
  min-height: 100vh;
}

/* 标题样式 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 36rpx;
  text-align: center;
  letter-spacing: 2rpx;
}

/* 排行卡片 */
.rank-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 24rpx auto;
  padding: 24rpx;
  border-radius: 24rpx;
  width: 95%;
  box-shadow: 0 6rpx 12rpx rgba(255, 145, 77, 0.15);
}

/* 第一名背景 */
.rank-item-0 {
  background: linear-gradient(135deg, #fff7d3, #ffe082);
}

/* 第二名背景 */
.rank-item-1 {
  background: linear-gradient(135deg, #f0f0f0, #dcdcdc);
}

/* 第三名背景 */
.rank-item-2 {
  background: linear-gradient(135deg, #f7e7db, #e0bfa3);
}

/* 左侧编号+图片 */
.rank-left {
  display: flex;
  align-items: center;
}

.rank-number {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
  width: 64rpx;
  text-align: center;
}

/* 前三名色调强化 */
.rank-0 { color: #FFB800; } /* 金色 No.1 */
.rank-1 { color: #C0C0C0; } /* 银色 No.2 */
.rank-2 { color: #CD7F32; } /* 铜色 No.3 */

.dish-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
  object-fit: cover;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 中间菜品信息 */
.dish-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.dish-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 6rpx;
}

.dish-desc {
  font-size: 24rpx;
  color: #888;
  line-height: 32rpx;
}

/* 右侧热度展示 */
.heat {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 16rpx;
}

.heat-label {
  font-size: 28rpx;
}

.heat-score {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF5722;
}
