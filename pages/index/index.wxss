/**index.wxss**/
.home-container {
  padding: 30rpx;
  background-color: #f5f5f5;
}

.recommend-card {
  display: flex;
  flex-direction: row;
  background: #fff;
  border-radius: 30rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.06);
  height: 310rpx;
}

.dish-img {
  width: 50%;
  height: 100%;
  object-fit: cover;
}

.dish-info {
  flex: 1;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 38rpx;
  font-weight: bold;
}

.dish-reason {
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
}

.dish-price {
  font-size: 28rpx;
  color: #fa541c;
  margin-bottom: 10rpx;
}

.search-btn {
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  background-color: #007aff;
  color: white;
  border-radius: 40rpx;
  width: fit-content;
  align-self: flex-start;
}

.filter-section {
  background: #fff;
  padding: 30rpx;
  border-radius: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.filter-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx 20rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  background-color: #f2f3f5;
  border-radius: 24rpx;
  text-align: center;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}

.slider-wrapper {
  margin: 20rpx 0;
}

.slider-label {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  color: #333;
  margin-left: 20rpx;
}

slider {
  width: 90%;
}

.refresh-wrapper {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.refresh-btn {
  font-size: 30rpx;
  background-color: #fa541c;
  color: #fff;
  padding: 16rpx 36rpx;
  border-radius: 30rpx;
  margin-top: 20rpx;
}


.bottom-section {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.bottom-subsection {
  flex: 1;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.flat-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.flat-thumb {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  object-fit: cover;
}

.flat-text {
  font-size: 30rpx;
  color: #444;
}


