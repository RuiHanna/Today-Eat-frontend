/**index.wxss**/
.home-container {
  padding: 30rpx;
  background-color: #FFF8F3;
}

.recommend-card {
  display: flex;
  flex-direction: row;
  background: #fff;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.06);
  height: 320rpx;
}

.left-img-wrapper {
  width: 48%;
  height: 100%;
  flex-shrink: 0;
}

.dish-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.dish-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 38rpx;
  font-weight: bold;
}

.dish-reason {
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
}

.dish-price {
  font-size: 28rpx;
  color: #fa541c;
  margin-bottom: 10rpx;
}
.recommend-actions {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 24rpx 40rpx;
}

.search-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 16rpx 0;
  border-radius: 40rpx;
  text-align: center;
  margin-right: 20rpx;
}

.like-btn {
  flex: 1;
  margin-right: 12rpx;
  background-color: transparent; /* 去掉背景色 */
  color: #999; /* 默认灰色 */
  border: none;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  user-select: none;
  transition: color 0.3s ease;
}

.like-btn.liked {
  color: #e94e77; /* 点赞后变红 */
}


.search-btn {
  background-color: #FFE07A;
  color: #333;
  margin-right: 0;
}

.filter-section {
  background: #fff;
  padding: 30rpx;
  border-radius: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.filter-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx 20rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  background-color: #f2f3f5;
  border-radius: 24rpx;
  text-align: center;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}

.slider-wrapper {
  margin: 20rpx 0;
}

.slider-label {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  color: #333;
  margin-left: 20rpx;
}

slider {
  width: 90%;
}

.refresh-wrapper {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.refresh-btn {
  font-size: 30rpx;
  background-color: #FFE07A;
  color: #333;
  padding: 16rpx 36rpx;
  border-radius: 30rpx;
  margin-top: 20rpx;
}


.bottom-section {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.bottom-subsection {
  flex: 1;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.flat-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.flat-thumb {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  object-fit: cover;
}

.flat-text {
  font-size: 30rpx;
  color: #444;
}


