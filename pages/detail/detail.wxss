/* pages/detail/detail.wxss */
.page {
  background-color: #fff9ec;
  padding: 20rpx;
  animation: fadeIn 0.5s ease-in-out;
  height: 100vh;
}

.dish-card {
  background: #fff6d8;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  margin-bottom: 40rpx;
  animation: slideUp 0.4s ease-in-out;
}

.dish-img {
  width: 100%;
  object-fit: cover;
}

.dish-info {
  padding: 20rpx;
}

.dish-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #a66c00;
  margin-bottom: 12rpx;
}

.dish-description {
  color: #555;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.dish-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.tag {
  background: #ffefc2;
  color: #a66c00;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.dish-actions button {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background: #ffe8a1;
  color: #a66c00;
  border: none;
}

.like-btn.liked {
  background: #ffd88c;
  color: #fff;
}

.rate-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup {
  background: #fff9ec;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 80%;
  text-align: center;
}

.popup-title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.confirm-btn {
  background: #ffcc70;
  margin-top: 20rpx;
  color: white;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}