page {
  height: 100vh;
  background-color: #FFF8F3; /* 统一淡橙底色 */
  font-family: sans-serif;
}

.scrollarea {
  flex: 1;
  overflow-y: scroll;
  padding: 24rpx;
}

.container {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding-top: 20rpx;
}

/* 用户信息卡片 */
.userinfo {
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

/* 横向：头像 + 昵称编辑 */
.profile-edit {
  display: flex;
  width: 100%;
  align-items: center;
  margin-bottom: 32rpx;
}

/* 左侧头像按钮 */
.avatar-wrapper {
  border: none;
  background: none;
  padding: 0;
  margin-right: 32rpx;
}

.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  box-shadow: 0 0 12rpx rgba(0, 0, 0, 0.1);
}

/* 右侧昵称输入 + 按钮 */
.nickname-side {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.nickname-label {
  width: 100rpx;
  font-size: 28rpx;
  color: #444;
}

.nickname-input {
  flex: 1;
  padding: 12rpx;
  border: 1px solid #ddd;
  border-radius: 12rpx;
  font-size: 28rpx;
}

/* 保存按钮 */
.save-button {
  width: 100%;
  background-color: #FFE07A;
  color: #333;
  font-size: 30rpx;
  padding: 16rpx 0;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 10rpx rgba(255, 145, 77, 0.25);
}

/* 登录按钮 */
.login-button {
  margin: 80rpx auto 40rpx;
  width: 80%;
  background-color: #FFE07A;
  color: #333;
  font-size: 32rpx;
  padding: 16rpx 0;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 10rpx rgba(255, 145, 77, 0.2);
}

/* 左对齐的统计信息 */
.stats {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  color: #666;
  font-size: 28rpx;
  line-height: 1.9;
  margin-top: 24rpx;
}

.stats text {
  margin-bottom: 12rpx;
  margin-left: 30rpx;
}

/* 收藏/历史展示卡片 */
.section {
  width: 100%;
  background-color: white;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.03);
  margin-bottom: 24rpx;
}

.section-header {
  font-weight: bold;
  font-size: 30rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e5e5e5;
  padding-bottom: 12rpx;
  margin-left: 35rpx;
}

.section-content {
  padding-top: 16rpx;
  margin-left: 30rpx;
}

.dish-item {
  font-size: 28rpx;
  padding: 14rpx 0;
  border-bottom: 1rpx dashed #eee;
  color: #444;
}

.dish-card {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 20rpx;
  margin: 20rpx 0;
  background-color: #fffbea;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.dish-img {
  width: 180rpx;
  height: 130rpx;
  border-radius: 12rpx;
  object-fit: cover;
  margin-right: 20rpx;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.dish-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.dish-extra {
  font-size: 24rpx;
  color: #999;
}

.section-content-anim {
  overflow: hidden;
}

