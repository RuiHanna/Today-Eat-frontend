/* pages/mine/mine.wxss */
.mine-container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.user-info {
  background: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

.avatar {
  width: 150rpx;
  height: 140rpx;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.stats text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.section {
  background: #fff;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

.section-header {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
}

.section-content {
  padding: 20rpx 30rpx;
}

.dish-item {
  font-size: 28rpx;
  color: #444;
  padding: 10rpx 0;
  border-bottom: 1rpx dashed #ddd;
}
