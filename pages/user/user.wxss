page {
  height: 100vh;
  background-color: #f9f9f9;
  font-family: sans-serif;
}

.scrollarea {
  flex: 1;
  overflow-y: scroll;
  padding: 20rpx;
}

.container {
  width: 95%;
  display: flex;
  flex-direction: column;
  align-items: center; /* 水平方向居中 */
  box-sizing: border-box;
  padding-top: 20rpx; /* 距离顶部一点空隙 */
}


.userinfo {
  width: 92%;
  background-color: white;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 40rpx 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.login-button,
.save-button {
  margin-top: 32rpx;
  width: 80%;
  background-color: #1aad19;
  color: white;
  font-size: 32rpx;
  padding: 16rpx 0;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 外层横向布局：头像 + 昵称/按钮 */
.profile-edit {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 90%;
  margin-top: 40rpx;
}

/* 左侧头像 */
.avatar-wrapper {
  padding: 0;
  border: none;
  background: none;
  margin-right: 24rpx;
}

.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  display: block;
}

/* 右侧昵称和按钮整体垂直排列 */
.nickname-side {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 昵称行 */
.nickname-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.nickname-label {
  width: 100rpx;
  font-size: 28rpx;
  color: #333;
}

.nickname-input {
  flex: 1;
  padding: 8rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.stats {
  width: 100%;
  padding: 20rpx 20rpx 0 40rpx;
  display: flex;
  flex-direction: column; /* 垂直排列 */
  align-items: flex-start; /* 靠左对齐 */
  color: #555;
  font-size: 28rpx;
  line-height: 1.8;
}

.stats text {
  margin-bottom: 8rpx;
  font-size: 15px;
}


.section {
  width: 92%;
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.03);
  margin-bottom: 24rpx;
}

.section-header {
  font-weight: bold;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e5e5e5;
  padding-bottom: 12rpx;
}

.section-content {
  padding-top: 16rpx;
}

.dish-item {
  font-size: 26rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx dashed #eee;
  color: #444;
}
