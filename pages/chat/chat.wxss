/* pages/chat/chat.wxss */
.welcome {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  text-align: center;
  color: #666;
  font-size: 30rpx;
  padding: 40rpx;
}

.welcome-icon {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 40rpx;
  border-radius: 50%;
}

.bold-welcome-text{
  font-weight: bolder;
  font-size: 18px;
  margin-bottom: 20rpx;
}

.welcome-text {
  white-space: pre-line; /* 支持换行符 \n */
}

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f7f7;
}

.chat-scroll {
  flex: 1;
  padding-bottom: 150rpx; /* 给底部一些空隙 */
  overflow-y: scroll;
}

.user-msg {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 40rpx;
  margin-top: 40rpx;
}

.user-bubble {
  max-width: 70%;
  background-color: #ffe9b0;
  padding: 20rpx 30rpx;
  border-radius: 30rpx;
  border-bottom-right-radius: 0;
  font-size: 30rpx;
  line-height: 1.6;
  margin-right: 50rpx;
}

.bot-msg {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.bot-reply {
  max-width: 68%;
  background-color: #ffffff;
  padding: 30rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 1.8;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.input-area {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 999; /* 保证固定在上层 */
}

.input {
  flex: 1;
  border: 1rpx solid #ccc;
  padding: 15rpx 20rpx;
  font-size: 30rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.send-btn {
  background-color: #FFB800;
  color: #fff;
  font-size: 28rpx;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 30rpx;
  border-radius: 20rpx;
  min-width: 120rpx;
  border: none;
}

/* 去除小程序按钮默认点击边框效果 */
button.send-btn::after {
  border: none;
}
